<h1>Listing eateries</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Phone</th>
  </tr>

  <style>
  </style>

<% for eatery in @eateries %>
  <% if eatery.open? %>
  <tr class="eateryOpen">
  <% else %>
  <tr class="eateryClosed">
  <% end %>
    <td class="eateryData"><%=h eatery.name %></td>
    <td class="eateryData"><%=h eatery.location %></td>
    <td class="eateryData"><%=h eatery.phone %></td>
    <td><%= link_to 'Show', eatery %></td>
    <td><%= link_to 'Edit', edit_eatery_path(eatery) %></td>
    <td><%= link_to 'Destroy', eatery, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

